#ifndef HAL_CONFIG_H
#define HAL_CONFIG_H

/*
	HALInterface configuration parameters
*/
#define HAL_INTERFACE_HBRIDGE_ENABLE	1 //there is 1 hbridge
#define HAL_INTERFACE_STEPPER_ENABLE	0 //no steppers
#define HAL_INTERFACE_LED_ENABLE		1 //1 led
#define HAL_INTERFACE_SENSOR_ENABLE		1 //1 sensor
#define HAL_INTERFACE_IMU_ENABLE		0 //no imus

//Uncomment to enable battery voltage being measured
//#define HAL_INTERFACE_BATTERY_ENABLE

//Uncomment for higher ADC resolution (only on arduino due and teensy)
//#define HAL_INTERFACE_AD_RESOLUTION	12	//Is only supported by Arduino Due and teensy, so don't enable it for other boards

/*
	Define dc motor with encoders setup
*/
#define HBRIDGE_PIN_SINGLE
#define ENCODER_USE_INTERRUPTS
//#define ENCODER_DO_NOT_USE_INTERRUPTS

#define HBRIDGE_ENABLE	1
// Motor0 setup
#define HBRIDGE0_COMP_ID	0		//component id
#define HBRIDGE0_H1_PIN	4			//direction pin for H-bridge - used in single and dual pin operation
#define HBRIDGE0_H2_PIN	0			//secondary direction pin for H-bridge - used only in dual pin operation
#define HBRIDGE0_PWM_PIN	3		//H-bridge pwm pin

/*
	Stepper motor setup
	STEPPER_TYPE: 1 = classic HBridge stepper with additional defines PIN1 - PIN4
				  2 = easyDriver stepper with additional defines PIN_DIR and PIN_STEP
*/
#define STEPPER_ENABLE	0
// Stepper0 setup
/*#define STEPPER0_ENABLE
#define STEPPER0_COMP_ID	20
#define STEPPER0_TYPE		2	
#define STEPPER0_PIN1		5	
#define STEPPER0_PIN2		6	
#define STEPPER0_PIN3		4	
#define STEPPER0_PIN4		3	
#define STEPPER0_DIR_PIN	3
#define STEPPER0_STEP_PIN	2*/


/*
	LED setup
*/
#define LED_ENABLE				1
#define ONBOARDLED_COMP_ID		30
#define ONBOARDLED_PIN			13
/*#define LED0_PIN_COMP_ID		31
#define LED0_PIN		0
#define LED1_PIN_COMP_ID		32
#define LED1_PIN		0
#define LED2_PIN_COMP_ID		33
#define LED2_PIN		0
#define LED3_PIN_COMP_ID		34
#define LED3_PIN		0*/


/*
	IMU SETUP
*/
#define IMU_ENABLE		0
// IMU0 setup
#define IMU0_COMP_ID	40


/*
	Analog Sensor setups
*/
//Battery setup
//#define BATTERY_ENABLE
#define BATTERY_COMP_ID	50
#define BATTERY_PIN		A10
#define BATTERY_SCALE	3.4305f //(4.257*3.3/(2^12))


#define SENSOR_COMP_ID	51 //some ID to recognize the sensor
#define SENSOR_PIN		A1 //analog sensor pin

#endif //HAL_CONFIG_H
